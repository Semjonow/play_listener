%header
  .navbar
    .navbar-inner
      .container
        %button.btn.btn-navbar{:type => "button", :data => {:toggle => "collapse", :target => "#nav-collapse-01"}, :style => "position:relative;top:8px;"}
        %a.brand{ :href => root_url, :title => "Play Listener" }
          = image_tag("icons/Key@2x.png", :width => "50", :height => "50")
        .nav-collapse.collapse#nav-collapse-01
          %ul.nav.pull-right{:style => "position:relative;top:8px;"}
            - if user_signed_in?
              %li.hidden-desktop
                %a{ :href => "javascript:void(0);" }
                  - unless current_user.properties.empty?
                    %span.fui-user
                    = current_user.username
                  - else
                    %span.fui-alert
                    No linked YouTube account

              %li.dropdown.visible-desktop
                %a.dropdown-toggle{:href => "javascript:void(0);", :data => {:toggle => "dropdown"}}
                  %span.fui-user
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{ :href => "javascript:void(0);" }
                      - unless current_user.properties.empty?
                        .thumbnail
                          = image_tag(current_user.avatar_url, :title => current_user.username, :alt => current_user.username, :class => "img-rounded")
                      - else
                        %span.fui-alert
                        No linked YouTube account

            %li.divider
            - if user_signed_in?
              %li
                = link_to logout_path, :data => { :method => :delete } do
                  %spam.fui-exit
                  Log Out
            - else
              %li
                = link_to login_path do
                  %span.fui-user
                  YouTube Log In